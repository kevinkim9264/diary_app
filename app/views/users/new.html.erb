<h1>Sign up</h1>

<%= form_for(@user) do |f| %>
	<%= render 'shared/error_messages' %>

	<% if @user.errors[:name].count > 0 %>

		<div class="form-group has-error">
			<%= f.label :name, class: "control-label", for: "inputError2" %><br>
			<%= f.text_field :name, class: "form-control", style: "width:20%", placeholder: "Enter name", for: "inputError2" %>
		</div>
	<% else %>
		<div class="form-group">
			<%= f.label :name %><br>
			<%= f.text_field :name, class: "form-control", style: "width:20%", placeholder: "Enter name" %>
		</div>
	<% end %>


	<% if @user.errors[:email].count > 0 %>
		<div class="form-group  has-error">
			<%= f.label :email, class: "control-label", for: "inputError2" %><br>
			<%= f.text_field :email, type: "email", class: "form-control", style: "width:35%", placeholder: "Enter email", for: "inputError2" %>
		</div>
	<% else %>
		<div class="form-group">
			<%= f.label :email, class: "control-label" %><br>
			<%= f.text_field :email, type: "email", class: "form-control", style: "width:35%", placeholder: "Enter email" %>
		</div>
	<% end %>


	<% if @user.errors[:password].count > 0 %>
		<div class="form-group  has-error">
			<%= f.label :password, class: "control-label", for: "inputError2" %><br>
			<%= f.password_field :password, type: "password", class: "form-control", style: "width:20%", placeholder: "Password", for: "inputError2" %>
		</div>
	<% else %>
		<div class="form-group">
		<%= f.label :password %><br>
		<%= f.password_field :password, type: "password", class: "form-control", style: "width:20%", placeholder: "Password" %>
		</div>
	<% end %>



	<% if @user.errors[:password_confirmation].count > 0 %>
		<div class="form-group  has-error">
			<%= f.label :password_confirmation, "Confirmation", class: "control-label", for: "inputError2" %><br>
			<%= f.password_field :password_confirmation, type: "password", class: "form-control", style: "width:20%", placeholder: "Password confirm", for: "inputError2" %>
		</div>
	<% else %>
		<div class="form-group">
			<%= f.label :password_confirmation, "Confirmation" %><br>
			<%= f.password_field :password_confirmation, type: "password", class: "form-control", style: "width:20%", placeholder: "Password confirm" %>
	<% end %>



	<div class="actions">
		<%= f.submit "Sign up", class: "btn btn-default" %>
	</div>

<% end %>