<h1> All users </h1>

<table>
<tr>
	<td colspan="2"><%= will_paginate %></td>
</tr>


	<% @users.each do |user| %>
	<tr>
		<td>
		
			<%= link_to user.name, user %>
		</td>
			<% if current_user.admin? %>
			<td>
			<a data-confirm="Are you sure?" data-method="delete" href=<%= user_path(user) %>>
   				<button class="btn btn-danger btn-sm">Delete</button>
			</a>
			</td>

			<% end %>
	</tr>
	<% end %>
</table

<%= will_paginate %>

